<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :member_no %>
    <%= form.number_field :member_no %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :middle_initial %>
    <%= form.text_field :middle_initial %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name_string %>
  </div>

  <div class="field">
    <%= form.label :birthdate %>
    <%= form.date_select :birthdate, start_year: Date.today.year - 120, end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :gender_id %>
    <%= form.collection_select :gender_id, Gender.order(:gender), :id, :gender %>
  </div>

  <div class="field">
    <%= form.label :street_address %>
    <%= form.text_field :street_address %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :county_id %>
    <%= form.collection_select :county_id, County.order(:county), :id, :county %>

  </div>

  <div class="field">
    <%= form.label :state_id %>
    <%= form.collection_select :state_id, State.order(:stateCode), :id, :stateCode %>

  </div>

  <div class="field">
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :home_phone %>
    <%= form.text_field :home_phone %>
  </div>

  <div class="field">
    <%= form.label :cell_phone %>
    <%= form.text_field :cell_phone %>
  </div>

  <div class="field">
    <%= form.label :send_card %>
    <%= form.check_box :send_card %>
  </div>

  <div class="field">
    <%= form.label :plan_id %>
    <%= form.collection_select :plan_id, Plan.order(:Membership_plan), :id, :Membership_plan %>

  </div>

  <div class="field">
    <%= form.label :membership_fee_id %>
    <%= form.collection_select :membership_fee_id, MembershipFee.order(:membership_fees_status), :id, :membership_fees_status %>

  </div>

  <div class="field">
    <%= form.label :role_id %>
    <%= form.collection_select :role_id, Role.order(:role), :id, :role %>

  </div>

  <div class="field">
    <%= form.label :status_id %>
    <%= form.collection_select :status_id, Status.order(:status), :id, :status %>

  </div>

  <div class="field">
    <%= form.label :member_since %>
    <%= form.date_select :member_since, start_year: Date.today.year - 40, end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= form.label :membership_ends %>
    <%= form.date_select :membership_ends, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
