<p id="notice"><%= notice %></p>

<h1>Family Members</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Relationship</th>
      <th>Title</th>
      <th>First name</th>
      <th>Middle initial</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Home phone</th>
      <th>Cell phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @family_members.each do |family_member| %>
      <tr>
        <td><%= family_member.member.first_name %></td>
        <td><%= family_member.relationship.relation %></td>
        <td><%= family_member.title %></td>
        <td><%= family_member.first_name %></td>
        <td><%= family_member.middle_initial %></td>
        <td><%= family_member.last_name %></td>
        <td><%= family_member.birthdate %></td>
        <td><%= family_member.age %></td>
        <td><%= family_member.gender.gender %></td>
        <td><%= family_member.email %></td>
        <td><%= family_member.home_phone %></td>
        <td><%= family_member.cell_phone %></td>
        <td><%= link_to 'Show', family_member %></td>
        <td><%= link_to 'Edit', edit_family_member_path(family_member) %></td>
        <td><%= link_to 'Destroy', family_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

